<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_airQuality"
    tools:context=".ui.activity.AirQualityActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_00DEFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_return">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/activity_air_quality"
            android:textColor="@color/white"
            android:textSize="?attr/MediumText" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--数据展示相关的view在此处布局-->

            <TextView
                android:id="@+id/tv_airQuality"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="28"
                android:textColor="@color/black"
                android:textSize="70sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_airLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优"
                android:textColor="@color/btn_text"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_airQuality"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_airQuality"
                app:layout_constraintTop_toTopOf="@+id/tv_airQuality" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-06-30"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_airQuality"
                app:layout_constraintEnd_toStartOf="@+id/tv_airQuality"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_airQuality" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="集美"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_day"
                app:layout_constraintEnd_toStartOf="@+id/tv_airQuality"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00:00"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_airQuality"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_day" />

            <TextView
                android:id="@+id/tv_pm25Val"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/btn_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_pm10Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_airQuality" />

            <TextView
                android:id="@+id/tv_pm25"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="@string/PM25"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_pm25Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_pm25Val" />

            <TextView
                android:id="@+id/tv_pm10Val"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="29"
                android:textColor="@color/btn_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_so2Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_airQuality" />

            <TextView
                android:id="@+id/tv_pm10"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="@string/PM10"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_pm10Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_pm10Val" />

            <TextView
                android:id="@+id/tv_so2Val"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/btn_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tc_center"
                app:layout_constraintTop_toBottomOf="@+id/tv_airQuality" />

            <TextView
                android:id="@+id/tv_so2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="@string/SO2"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_so2Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_so2Val" />

            <TextView
                android:id="@+id/tv_no2Val"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/btn_text"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tc_center"
                app:layout_constraintTop_toBottomOf="@+id/tv_airQuality" />

            <TextView
                android:id="@+id/tv_no2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="@string/NO2"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_no2Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_no2Val" />

            <TextView
                android:id="@+id/tv_o3Val"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="42"
                android:textColor="@color/btn_text"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tv_no2Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_airQuality" />

            <TextView
                android:id="@+id/tv_o3"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="@string/O3"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_o3Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_o3Val" />

            <TextView
                android:id="@+id/tv_coVal"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="0.383"
                android:textColor="@color/btn_text"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tv_o3Val"
                app:layout_constraintTop_toBottomOf="@+id/tv_airQuality" />

            <TextView
                android:id="@+id/tv_co"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="@string/CO"
                android:textSize="16sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/tv_coVal"
                app:layout_constraintTop_toBottomOf="@+id/tv_coVal" />

            <TextView
                android:id="@+id/tc_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_airQuality" />

            <Button
                android:id="@+id/btn_airRank"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_shade_blue_rc"
                android:text="@string/activity_air_quality_rank"
                android:textColor="@color/text_blue"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_airQuality"
                app:layout_constraintTop_toBottomOf="@+id/tv_airLevel" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>